{
  "name": "@ethaks/fvtt-quench",
  "version": "0.7.0",
  "description": "Types for a Foundry VTT module enabling tests using Mocha and Chai",
  "author": "Ethaks",
  "contributors": [
    {
      "name": "Cole Schultz"
    },
    {
      "name": "Ethaks",
      "email": "ethaks@pm.me"
    }
  ],
  "type": "module",
  "scripts": {
    "lint": "tsc && eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts --fix .",
    "format": "prettier --write \"./**/*.(js|mjs|ts|json|css|yml)\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "prebuild": "npm run apply-patches",
    "build": "vite build",
    "serve": "vite serve",
    "prerelease": "npm run build && npm run lint && npm run declaration",
    "release": "standard-version",
    "declaration": "tsc --project tsconfig.declaration.json",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "prepack": "npm run declaration",
    "apply-patches": "patch-package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ethaks/FVTT-Quench.git"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Ethaks/FVTT-Quench/issues"
  },
  "keywords": [
    "test",
    "testing",
    "mocha",
    "chai",
    "foundry-vtt",
    "foundryvtt",
    "foundry"
  ],
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/Ethaks/FVTT-Quench#readme",
  "dependencies": {
    "@league-of-foundry-developers/foundry-vtt-types": "^9.249.4",
    "@types/chai": "^4.2.22",
    "@types/diff": "^5.0.2",
    "@types/mocha": "^9.0.0",
    "fast-check": "^2.20.0",
    "wildcard-match": "^5.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@guanghechen/rollup-plugin-copy": "^1.9.6",
    "@sindresorhus/fnv1a": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "diff": "^5.0.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "fs-extra": "^10.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.0",
    "pretty-format": "^28.1.0",
    "rollup-plugin-visualizer": "^5.6.0",
    "standard-version": "^9.3.2",
    "terser": "^5.14.2",
    "typedoc": "^0.23.7",
    "typescript": "^4.5.2",
    "vite": "^3.0.4",
    "vite-plugin-checker": "^0.4.8"
  },
  "lint-staged": {
    "*.(ts|js)": "eslint --cache --fix",
    "*.(json|css|yml)": "prettier --write"
  },
  "publishConfig": {
    "access": "public"
  }
}
