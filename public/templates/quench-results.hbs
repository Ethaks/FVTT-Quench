<div class="flexcol" style="height: 100%">
    <div id="select-buttons" class="controls-container" {{#unless anyBatches}}style="display: none"{{/unless}}>
      <div class="filter formgroup flexrow">
        <input type="search" id="quench-filter" placeholder="{{localize "QUENCH.Filter"}}" autocomplete="off" />
        <i class="fas fa-search"></i>
      </div>
        <button type="button" data-action="select" data-select="all">{{localize "QUENCH.SelectAll"}}</button>
        <button type="button" data-action="select" data-select="none">{{localize "QUENCH.SelectNone"}}</button>
    </div>
    <div id="quench-batches">
        <ul id="quench-batches-list">
            {{#each batches}}
                <li class="test-batch" data-batch="{{this.name}}">
                <label><input type="checkbox" {{checked this.selected}} />{{this.displayName}}</label>
                    <div class="expandable expanded"></div>
                </li>
            {{/each}}
        </ul>
    </div>
    <div id="quench-results-stats" style="display: none"></div>
    <div class="controls-container" >
        <button id="quench-run" data-action="run">{{localize "QUENCH.Run"}}</button>
        <button style="display: none" id="quench-abort" data-action="abort">{{localize "QUENCH.Abort"}}</button>
        <button style="display: none" id="quench-update-snapshots" data-action="updateSnapshots">{{localize "QUENCH.UpdateSnapshots"}}</button>
    </div>
</div>
