{
  "compilerOptions": {
    "module": "es6",
    "target": "es2021",
    "types": ["@league-of-foundry-developers/foundry-vtt-types", "@types/mocha"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "lib": ["DOM", "ES2021"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "dist/types"
  },
  "exclude": ["dist", "foundry"],
  "include": ["src/**/*.ts"]
}
