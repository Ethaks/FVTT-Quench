{
	"compilerOptions": {
		"module": "es2022",
		"target": "es2022",
		"types": ["@league-of-foundry-developers/foundry-vtt-types", "@types/mocha", "vite/client"],
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"strictNullChecks": true,
		"exactOptionalPropertyTypes": true,
		"strict": true,
		"lib": ["DOM", "DOM.Iterable", "ES2023"],
		"skipLibCheck": true,
		"noEmit": true
	},
	"exclude": ["dist", "foundry"],
	"include": ["src/**/*.ts"],
	"typeAcquisition": {
		"include": ["jquery"]
	}
}
